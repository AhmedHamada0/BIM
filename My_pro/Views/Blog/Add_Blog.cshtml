
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Create a new Blog</title>
    <link rel="icon" type="image/png" href="~/img/Default/Icon/Bim.png" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css"/>
    <link href="~/vendor/wzr/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/vendor/wzr/css/material-bootstrap-wizard.css" rel="stylesheet" />
    <link href="~/vendor/wzr/css/demo.css" rel="stylesheet" />
</head>

<body>
    <div class="image-container set-full-height" style="background-image: url('../../vendor/wzr/img/Green.jpg')">

        <!--   Big container   -->
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <!--      Wizard container        -->
                    <div class="wizard-container">
                        <div class="card wizard-card" data-color="purple" id="wizard">

                            @using (Html.BeginForm("Add_Blog", "Blog", FormMethod.Post))
                            {

                                    <!--        You can switch " data-color="rose" "  with one of the next bright colors: "blue", "green", "orange", "purple"        -->

                                    <div class="wizard-header">
                                        <h3 class="wizard-title">
                                            Create a new Blog
                                        </h3>
                                        <h5>Enter the following fields.</h5>
                                    </div>
                                    <div class="wizard-navigation">
                                        <ul>
                                            <li><a href="#location" data-toggle="tab">Step-1</a></li>
                                            <li><a href="#type" data-toggle="tab">Step-2</a></li>
                                            <li><a href="#description" data-toggle="tab">Step-3</a></li>
                                        </ul>
                                    </div>

                                    <div class="tab-content">
                                        <div class="tab-pane" id="location">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <h4 class="info-text"> Let's start with the basic details</h4>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">Title or Upper text</label>
                                                        <input type="text" class="form-control" name="TopTX">
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">Include ( Image Or Video )</label>
                                                        <select name="imgvideo" class="form-control">
                                                            <option disabled="" selected=""></option>
                                                            <option value="Image"> Image </option>
                                                            <option value="Video"> Video </option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 ">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">URL : ( Img or Video )</label>
                                                        <input type="text" name="TURL" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="type">
                                            <h4 class="info-text">You can include up to 3 links. </h4>
                                            <div class="row">
                                                <div class="col-sm-12 ">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">Link-1 :</label>
                                                        <input type="text" name="Link1" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 ">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">Link-2 :</label>
                                                        <input type="text" name="Link2" class="form-control">
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 ">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">Link-3 :</label>
                                                        <input type="text" name="Link3" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="description">
                                            <div class="row">
                                                <h4 class="info-text"> Write here the article or Blog to be published. </h4>
                                                <div class="col-sm-12">
                                                    <div class="form-group label-floating">
                                                        <label class="control-label">Place description</label>
                                                        <textarea name="ButtomTX" class="form-control" style="text-align: right;" placeholder="" rows="9"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="wizard-footer">
                                        <div class="pull-right">
                                            <input type='button' class='btn btn-next btn-fill btn-primary btn-wd' name='next' value='Next' />
                                            <input type='submit' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' value='Finish' />
                                        </div>
                                        <div class="pull-left">
                                            <input type='button' class='btn btn-previous btn-fill btn-default btn-wd' name='previous' value='Previous' />
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                            }

                        </div>
                    </div> <!-- wizard container -->
                </div>
            </div> <!-- row -->
        </div> <!--  big container -->

        <div class="footer">
            <div class="container text-center">
                All copyrights reserved <i class="fa fa-heart heart"></i> <a href="http://bimarabia.com/"> Bimarabia </a> <i class="fa fa-heart heart"></i>
            </div>
        </div>
    </div>

</body>
</html>

<!--   Core JS Files   -->
<script src="~/vendor/wzr/js/jquery-2.2.4.min.js" type="text/javascript"></script>
<script src="~/vendor/wzr/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/vendor/wzr/js/jquery.bootstrap.js" type="text/javascript"></script>

