@model IEnumerable<My_pro.Model.Blogs>
@{
    Layout = null;
    int i = 1;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Blogs List</title>
    <link rel="icon" type="image/png" href="~/img/Default/Icon/Bim.png" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/fresh-bootstrap-table.css" rel="stylesheet" />
    <link href="~/css/Alert.css" rel="stylesheet" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>

</head>
<body>

    <div class="wrapper">
        <div class="fresh-table toolbar-color-blue full-screen-table">
            <!--    Available colors for the full background: full-color-blue, full-color-azure, full-color-green, full-color-red, full-color-orange
                    Available colors only for the toolbar: toolbar-color-blue, toolbar-color-azure, toolbar-color-green, toolbar-color-red, toolbar-color-orange
            -->

            <div class="toolbar">
                <a href="../../../Blog/Add_Blog" id="alertBtn" class="btn btn-default">New Blog</a>
            </div>

            <table id="fresh-table" class="table">
                <thead>
                <th data-field="id">ID</th>
                <th data-field="name" data-sortable="true">Author</th>
                <th data-field="salary" data-sortable="true">Title</th>
                <th data-field="country" data-sortable="true">Date</th>
                <th data-field="actions" data-events="operateEvents">Actions</th>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                    <tr>
                        <td>@i</td>
                        <td>@o.UserName</td>
                        <td>@o.Toptext</td>
                        <td>@o.Date</td>
                        <td>
                            <a rel="tooltip" title="View" class="table-action edit" href="@Url.Action("ViewB", "Blog",new { id = o.Id })">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a rel="tooltip" title="Remove" id="@o.Id" class="table-action remove" href="@Url.Action("Del_Blog", "Blog",new { id = o.Id })">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                    i++;
                    }
                </tbody>
            </table>
        </div>

    </div>


</body>
</html>

<script type="text/javascript" src="~/js/jquery-1.11.2.min.js"></script>
<script type="text/javascript" src="~/js/bootstrap.js"></script>
<script type="text/javascript" src="~/js/bootstrap-table.js"></script>
<script type="text/javascript" src="~/js/Alert.js"></script>